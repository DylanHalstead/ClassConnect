{
	"arrowParens": "avoid",
	"bracketSameLine": true,
	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte"
			}
		}
	],

	"plugins": ["prettier-plugin-svelte", "@trivago/prettier-plugin-sort-imports"],
	"printWidth": 100,
	"quoteProps": "consistent",
	"trailingComma": "none",
	"useTabs": true
}
